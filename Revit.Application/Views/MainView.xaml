<Window x:Class="Revit.Application.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:extension="clr-namespace:Revit.Application.UI"
        xmlns:local="clr-namespace:Revit.Application.Views"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:pages="clr-namespace:Revit.Application.Views"
        xmlns:vm="clr-namespace:Revit.Application.ViewModels"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        d:DataContext="{d:DesignInstance vm:MainViewModel}"
        x:Name="mainWindow"
        mc:Ignorable="d"
        WindowStyle="None"
        Height="700"
        Width="1200">
    <Grid>
        <ui:NavigationStore Grid.Column="0"
                            Background="Red"
                            Width="50"
                            Frame="{Binding ElementName=MainFrame}"
                            SelectedPageIndex="0">
            <ui:NavigationStore.Items>
                <ui:NavigationItem Content="工作台"
                                   Icon="Home24"
                                   PageTag="home"
                                   PageType="{x:Type pages:AboutAuthor}" />
                <ui:NavigationItem Content="Apps"
                                   Icon="AppFolder24"
                                   PageTag="home" />
                <ui:NavigationItem Content="Mail"
                                   Icon="Mail24" />
            </ui:NavigationStore.Items>
            <ui:NavigationStore.Footer>
                <ui:NavigationItem Content="Settings"
                                   Icon="Settings24" />
                <ui:NavigationItem Content="关于"
                                   Icon="Library24"
                                   PageType="{x:Type pages:AboutAuthor}" />
            </ui:NavigationStore.Footer>
        </ui:NavigationStore>
      
    </Grid>
</Window>
