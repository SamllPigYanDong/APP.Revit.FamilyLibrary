                </TreeView.ItemTemplate>
            </TreeView>
        </TabItem>-->
            </TabControl>

            <UniformGrid
                Grid.Row="1"
                Margin="15"
                Columns="2"
                Rows="1">
                <Button
                    Margin="0,0,10,0"
                    Padding="5"
                    Command="{Binding CloseCommand}"
                    Content="取消" />
                <Button
                    Padding="5"
                    Command="{Binding SubmitCommand}"
                    Content="保存" />
            </UniformGrid>
        </Grid>
    </uiModel:RvtContentSection>

</UserControl>
