<Window x:Class="Tamplate.Revit.Mep.Views.ProgressBarDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tamplate.Revit.Mep.Views"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:Tamplate.Revit.Mep.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:ProgressBarViewModel}"       
        Title="ProgressBarDialog" Height="50" Width="500" WindowStyle="None" Background="Transparent" 
        AllowsTransparency="True" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid Background="Transparent" >
        <StackPanel Orientation="Vertical" Background="Transparent" Height="50">
            <ProgressBar Value="{Binding Value}" Maximum="{Binding Max}" Height="25" Background="Gray" BorderBrush="Gray" />
            <TextBlock Text="{Binding Title}" HorizontalAlignment="Center" FontWeight="Black" Background="White"/>
        </StackPanel>
    </Grid>


</Window>
